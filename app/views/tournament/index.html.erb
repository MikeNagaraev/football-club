<div class="container-fluid tournaments">
    <div class="tournaments-container">
        <div class="col-md-1">
            <div class="tournaments-button-wrapper">
                <%= link_to tournament_new_path  do %>
                <span class="icon icon-circle">
                    <span class="glyphicon glyphicon-plus" title="New tournament"></span>
                </span>
                <% end %>
            </div>
            <div class="tournaments-button-wrapper">
                <%= link_to root_path do %>
                <span class="icon icon-circle">
                    <span class="glyphicon glyphicon-chevron-left" title="Back"></span>
                </span>
                <% end %>
            </div>
        </div>
        <div class="tournaments-found col-md-5 col-md-offset-1">
            <div class="container">
                <div class="col-md-6">
                    <h2 class="tournaments-header">
                        Let's search:
                    </h2>
                    <%= form_tag(tournaments_path, method: :get, class: 'tournaments-form-search') do %>
                    <div class="form-line-wrapper">
                        <div class="col-md-4">
                            <label class="form-label">Tournament name:</label>
                        </div>
                        <div class="col-md-8">
                            <%= text_field_tag :tournament_name, "", class: 'form-input' %>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-3">
                        <%= submit_tag 'Search', class: 'btn btn-success form-submit tournaments-button-wrapper' %>
                    </div>
                    <% end %>
                    <% if @found_tournaments != nil and @found_tournaments.size > 0 %>
                    <h2 class="tournaments-header">
                        Found tournaments:
                    </h2>
                    <table class="tournaments-table">
                        <tr>
                            <td>ID</td>
                            <td>Tournament Name</td>
                        </tr>
                        <% @found_tournaments.each do |tournament| %>
                        <tr>
                            <td>
                                <%= tournament['tournament_id'] %>
                            </td>
                            <td>
                                <%= tournament['tournament_name'] %>
                            </td>
                        </tr>
                        <% end %>
                    </table>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="tournaments-all">
                <div class="container">
                    <% if @tournaments %>
                    <h2 class="tournaments-header">
                        List of tournaments:
                    </h2>
                    <table class="tournaments-table">
                        <tr>
                            <td>ID</td>
                            <td>Tournament Name</td>
                        </tr>
                        <% @tournaments.each do |tournament| %>
                        <tr>
                            <td>
                                <%= tournament.tournament_id %>
                            </td>
                            <td>
                                <%= tournament.tournament_name %>
                            </td>
                        </tr>
                        <% end %>
                    </table>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
